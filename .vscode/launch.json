  "version": "0.2.0",
  "configurations": [
  {
    "name": "Client",
    "request": "launch",
    "type": "chrome",
    "url": "http://localhost:3000",
    "webRoot": "${workspaceFolder}/client"
  },
    {
      "type": "node",
      "request": "launch",
      "name": "Server",
      "envFile": "${workspaceFolder}/server/.env",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/server/server.js"
    }
  ]
}